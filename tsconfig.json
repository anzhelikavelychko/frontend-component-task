{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "outDir": "./dist/",
    "module": "es6",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react",
    "allowJs": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
